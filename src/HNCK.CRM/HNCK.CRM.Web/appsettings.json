{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Trace",
      "Microsoft.Hosting.Lifetime": "Trace"
    },
    "FileLogger": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "None",
        "System": "None"
      }
    },
    "DbLogger": {
      "LogLevel": {
        "Default": "Trace",
        "Microsoft": "None",
        "System": "None"
      }
    }
  },
  "App": {
    "LogPath": "C:\\Logs\\hnckCrm\\",
    "FileStorage": "C:\\Logs\\hnckCrm\\_files\\",
    "AttachmentMaxSizeInBytes": 5242880, //5 MB
    "NotificationDays": 3,
    "DbOptions": {
      "ConnectionString": "Host=localhost;Database=hnckcrm;Username=hnckcrmuser;Password=hnckcrmpwd",
      "CommandTimeout": 120,
      "Key": "PGPASSWORD"
    },
    "AppLogger": {
      "LogRequest": false,
      "EnableLogToFile": true,
      "EnableLogToDb": true,
      "PostgreSqlProvider": true
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\hnckCrm\\logs.json",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  }
}
