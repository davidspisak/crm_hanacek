@model HNCK.CRM.Web.ViewModels.Subject.SubjectUpdateViewModel
@{
}


<div class="container">
	<h2 class="hnck-text-blue">@Localizer.GetString("Title")</h2>
	<hr />
	<form asp-controller="Subject" asp-action="Update" method="post">

		<div class="hnck-headerblock">
			<div class="hnck-headerblock-header hnck-text-blue"><span class="hnck-headerblock-text">@Localizer.GetString("MainSubInfoTitle")</span></div>
			<input class="hnck-input form-control" type="hidden" asp-for="Subject.IdSubject">
			<input class="hnck-input form-control" asp-for="Subject.Address.IdAddressType" type="hidden">
			<input class="hnck-input form-control" asp-for="Subject.Address.IdAddress" type="hidden">
			<div class="row">
				<div class="col-xl-2">
					<label class="hnck-text-white hnck-label" asp-for="Subject.FirstName">@Localizer.GetString("FirstName")</label>
				</div>
				<div class="col-xl-4">
					<input class="hnck-input form-control" asp-for="Subject.FirstName">
				</div>

				<div class="col-xl-2">
					<label class="hnck-text-white hnck-label" asp-for="Subject.LastName">@Localizer.GetString("LastName")</label>
				</div>
				<div class="col-xl-4">
					<input class="hnck-input form-control" asp-for="Subject.LastName">
				</div>
			</div>

			<div class="row">
				<div class="col-xl-3">
					<label class="hnck-text-white hnck-label" asp-for="Subject.PersonalIdentificationNumber">@Localizer.GetString("PersonalIdentificationNumber")</label>
				</div>
				<div class="col-xl-3">
					<input class="hnck-input form-control" asp-for="Subject.PersonalIdentificationNumber">
				</div>

				<div class="col-xl-3">
					<label class="hnck-text-white hnck-label" asp-for="Subject.BusinessIdentificationNumber">@Localizer.GetString("BusinessIdentificationNumber")</label>
				</div>
				<div class="col-xl-3">
					<input class="hnck-input form-control" asp-for="Subject.BusinessIdentificationNumber">
				</div>
			</div>

			<div class="row">
				<div class="col-xl-2">
					<label class="hnck-text-white hnck-label" asp-for="Subject.BirthDate">@Localizer.GetString("BirthDate")</label>
				</div>
				<div class="col-xl-4">
					<input class="hnck-input form-control" type="date" asp-for="Subject.BirthDate">
				</div>

				<div class="col-xl-2">
					<label class="hnck-text-white hnck-label" asp-for="Subject.ResidenceCardValidTo">@Localizer.GetString("ResidenceCardValidTo")</label>
				</div>
				<div class="col-xl-4">
					<input class="hnck-input form-control" type="date" asp-for="Subject.ResidenceCardValidTo">
				</div>
			</div>

			<div class="row">
				<div class="col-xl-3">
					<label class="hnck-text-white hnck-label" asp-for="Subject.TravelDocument">@Localizer.GetString("TravelDocument")</label>
				</div>
				<div class="col-xl-3">
					<input class="hnck-input form-control" asp-for="Subject.TravelDocument">
				</div>

				<div class="col-xl-3">
					<label class="hnck-text-white hnck-label" asp-for="Subject.IdNationality">@Localizer.GetString("IdNationality")</label>
				</div>
				<div class="col-xl-3">
					<select class="hnck-input form-control" asp-for="Subject.IdNationality" asp-items="@Model.Countries">
						<option>-- @Localizer.GetString("select") --</option>
					</select>
				</div>
			</div>

			<div class="row">
				<div class="col-xl-3">
					<label class="hnck-text-white hnck-label" asp-for="Subject.Owner">@Localizer.GetString("Owner")</label>
				</div>
				<div class="col-xl-9">
					<input class="hnck-input form-control" asp-for="Subject.Owner">
				</div>
			</div>

		</div>

		<div class="hnck-headerblock">
			<div class="hnck-headerblock-header hnck-text-blue"><span class="hnck-headerblock-text">@Localizer.GetString("ContactTitle")</span></div>
			<div class="row">
				<div class="col-xl-2">
					<label class="hnck-text-white hnck-label" asp-for="Subject.Email">@Localizer.GetString("Email")</label>
				</div>
				<div class="col-xl-4">
					<input class="hnck-input form-control" asp-for="Subject.Email">
				</div>

				<div class="col-xl-2">
					<label class="hnck-text-white hnck-label" asp-for="Subject.TelNumber">@Localizer.GetString("TelNumber")</label>
				</div>
				<div class="col-xl-4">
					<input class="hnck-input form-control" asp-for="Subject.TelNumber">
				</div>
			</div>
		</div>

		<div class="hnck-headerblock">
			<div class="hnck-headerblock-header hnck-text-blue"><span class="hnck-headerblock-text">@Localizer.GetString("AddressTitle")</span></div>
			<div class="row">
				<div class="col-xl-2">
					<label class="hnck-text-white hnck-label" asp-for="Subject.Address.StreetName">@Localizer.GetString("StreetName")</label>
				</div>
				<div class="col-xl-4">
					<input class="hnck-input form-control" asp-for="Subject.Address.StreetName">
				</div>

				<div class="col-xl-2">
					<label class="hnck-text-white hnck-label" asp-for="Subject.Address.StreetNumber">@Localizer.GetString("StreetNumber")</label>
				</div>
				<div class="col-xl-4">
					<input class="hnck-input form-control" asp-for="Subject.Address.StreetNumber">
				</div>
			</div>

			<div class="row">
				<div class="col-xl-2">
					<label class="hnck-text-white hnck-label" asp-for="Subject.Address.Zip">@Localizer.GetString("Zip")</label>
				</div>
				<div class="col-xl-4">
					<input class="hnck-input form-control" asp-for="Subject.Address.Zip">
				</div>

				<div class="col-xl-2">
					<label class="hnck-text-white hnck-label" asp-for="Subject.Address.CityName">@Localizer.GetString("CityName")</label>
				</div>
				<div class="col-xl-4">
					<input class="hnck-input form-control" asp-for="Subject.Address.CityName">
				</div>
			</div>

			<div class="row">
				<div class="col-xl-2">
					<label class="hnck-text-white hnck-label" asp-for="Subject.Address.IdCountry">@Localizer.GetString("IdCountry")</label>
				</div>
				<div class="col-xl-10">
					<select class="hnck-input form-control" asp-for="Subject.Address.IdCountry" asp-items="@Model.Countries">
						<option>-- @Localizer.GetString("select") --</option>
					</select>
				</div>
			</div>
			
		</div>

		<div class="hnck-headerblock">
			<div class="hnck-headerblock-header hnck-text-blue"><span class="hnck-headerblock-text">@Localizer.GetString("Note")</span></div>
			<div class="row">
				<div class="col-xl-12">
					<textarea class="hnck-input form-control" asp-for="Note"></textarea>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-xl-8"></div>
			<div class="col-xl-2">
				<input class="btn btn-primary btn-block" type="submit" value="@Localizer.GetString("UpdateButton")" />
			</div>
			<div class="col-xl-2">
				<a type="button" class="btn btn-primary btn-block" asp-action="Index" asp-controller="Subject" method="get">@Localizer.GetString("BackButton")</a>
			</div>
		</div>
	</form>
</div>